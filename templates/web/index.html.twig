{% block end_javascript %}
<script>
$(function() {
	// Set up the OSM layer
	var myTileServer = new ol.layer.Tile({
	  source: new ol.source.OSM({
	    crossOrigin: null,
	    url: 'https://{a-c}.tile.openstreetmap.org/{z}/{x}/{y}.png'
	  })
	});

	// Create the map
	var map = new ol.Map({
	  layers: [ myTileServer ],
	  target: 'map',
	  view: new ol.View({
	    center: ol.proj.transform([10, 45], 'EPSG:4326', 'EPSG:3857'),
	    zoom: 8
	  })
	});

	$.ajax({
		  url: "{{ path('web_load_notas') }}",
		  method: 'GET'
		}).done(function(res) { 
		 	for(index in res) {
		 		console.info($('.ajax-loader-nota-' + index));
		 		$('#lista-nota-' + index).html(res[index])
		 		$('.ajax-loader-nota-' + index).hide();
		 	}
		}
	);

	getNoticia(0);
});
</script>
